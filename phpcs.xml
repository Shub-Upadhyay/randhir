<?xml version="1.0"?>
<ruleset name="App">
	<description>RevKeep custom rules.</description>
	<config name="installed_paths" value="../../cakephp/cakephp-codesniffer" />
	<rule ref="CakePHP">
		<exclude name="Generic.WhiteSpace.DisallowTabIndent" />
		<exclude
			name="SlevomatCodingStandard.TypeHints.DeclareStrictTypes.IncorrectWhitespaceBeforeDeclare" />
	</rule>
	<rule ref="Generic.Files.LineLength">
		<properties>
			<property name="lineLimit" value="255" />
			<property name="absoluteLineLimit" value="0" />
		</properties>
	</rule>
</ruleset>
